<div>
    @if(SubtreeDepth > 0) {
        @for(int i = 0; i < BranchingFactor; i += 1) {
            <Node SubtreeDepth="@getSubtreeDepth()" BranchingFactor="@BranchingFactor" />
        }        
    }
    @if(SubtreeDepth == 0) {
        <div>
            @count
            <button class="btn-increment-leaf" @onclick="increment">Update leaf</button>
        </div>        
    }
  </div>

@code {
    [Parameter]
    public int BranchingFactor { get; set; }

    [Parameter]
    public int SubtreeDepth { get; set; }

    int count = 0;

    public void increment() {
        count += 1;
    }

    public int getSubtreeDepth() {
        return SubtreeDepth - 1;
    }


}